<Window x:Class="OliveBank.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OliveBank"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="LightSlateGray"
        Title="Olive Banking - Login" Height="250" Width="250">
    <Grid >
        <TextBox Name="usernameTxt" HorizontalAlignment="Left" Margin="60,45,0,0" TextWrapping="Wrap" Text="Username" TextAlignment="Center" VerticalAlignment="Top" Width="125" Height="25" GotFocus="usernameTxt_GotFocus" LostFocus="usernameTxt_LostFocus" Padding="2"/>
        <PasswordBox Name="passBox" HorizontalAlignment="Left" Margin="60,76,0,0" VerticalAlignment="Top" Width="125" Height="25" HorizontalContentAlignment="Center" GotFocus="passBox_GotFocus" LostFocus="passBox_LostFocus" Padding="2"/>
        <Button Name="loginBtn" Content="Login" Margin="85,114,0,0" VerticalAlignment="Top" Click="loginBtn_Click" IsDefault="True" HorizontalAlignment="Left" Width="75" />
        <Button Name="createUserBtn" Content="Create User" HorizontalAlignment="Left" Margin="85,140,0,0" VerticalAlignment="Top" Width="75" Click="createUserBtn_Click" />

    </Grid>
</Window>
